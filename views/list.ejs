<head>
    <meta charset="UTF-8">
    <title><%= title %></title><!--Document Title -->

    <link rel="stylesheet" href="/styles/site.css"><!--link to site styling-->
 

    <!-- Google fonts for Oswald -->
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;400;500;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"><!--link to cdn styling-->
</head>
<body>

    <%- include('./partials/header.ejs') %>    <!--Including the header document into the grooming page-->
<section class="container">
    <h1 class="center-text">Our Customers</h1>
    <% if(customers.length > 0) { %>
    <table id="myTable" class="customerList">
        <tr>
        <th class="tableHeader">Customer ID</th>
        <th class="tableHeader">Email</th>
        </tr>
        <tbody>
            <% customers.forEach(function(customer) { %>
            <tr>
                <td>
                    <%= customer.customerId %>
                </td>
                <td class="email">
                    <%= customer.email %>
                </td>
                <td>
                    <td><input type="button" value="Delete" onclick="deleteRow(this)">
            </tr>
            <% }) %>
            </tbody>
        </table>
        <% } else { %>
        <h3>No Customers Added Yet</h3>
        <% } %>
    </div>
</div>
</section>
    <%- include('./partials/footer.ejs') %>
</body>
</html>


<script>
function deleteRow(r) {
  var i = r.parentNode.parentNode.rowIndex;
  document.getElementById("myTable").deleteRow(i);
}
</script>
