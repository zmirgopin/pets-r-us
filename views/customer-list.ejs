<head>
    <meta charset="UTF-8">
    <title><%= title %></title><!--Document Title -->

    <link rel="stylesheet" href="/styles/site.css"><!--link to site styling-->
 
    <!-- Google fonts for Oswald -->
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;400;500;700&display=swap" rel="stylesheet"><!--Link to google fonts-->

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"><!--link to cdn styling-->
</head>
<body>

<%- include('./header.ejs') %>   <!--Including the header document into the boarding page-->
<section class="container">
    <h3>Customer List:</h3>

    <div class= "card-content">
        
        <% if(customers.length>0) {%>
        <table class="table">
            <tr>
                <th>Customer ID</th>
                <th>Email</th>
            </tr>
            <tbody>
                <% customers.forEach(function(customer){ %>
                <tr>
                    <td>
                        <%=customer.name %>
                        <%=customer.email%>
                    </td>
                </tr>
                    <%}) %>
            </tbody>
        </table>
        <%} else { %>
            <h3>Customers have not been added to the MongoDB database</h3>
                <%}%>
    </div>



</section> <!--Including the footer in the page. -->
<%- include('./footer.ejs') %>
</body>
</html>