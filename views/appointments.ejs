<head>
    <meta charset="UTF-8">
    <title><%= title %></title><!--Document Title -->

    <link rel="stylesheet" href="/styles/site.css"><!--link to site styling-->
 

    <!-- Google fonts for Oswald -->
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;400;500;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"><!--link to cdn styling-->
</head>
<body>

    <%- include('./partials/header.ejs') %>     <!--Including the header document into the grooming page-->
<section class="container">
    <h3 class= "bookingHeader">Book an appointment below:</h3> 
    <div class="bookingForm">   <!--Form for user to fill out in order to create an appointment-->
        <form action="/appointments" method="post">

                <input placeholder = "Username" class="input" type="text" name="userName" id="userName" required autofocus><br />        
                <input placeholder = "First Name" class="input" type="text" name="firstName" id="firstName" required autofocus><br />               
                <input placeholder = "Last Name" class="input" type="text" name="lastName" id="lastName" required autofocus><br />               
                <input placeholder = "Email" class="input" type="text" name="email" id="email" required autofocus><br />               

                <label class = "serviceLabel" for="service"><p>Service</p></label> 
                <select class="drop-down-menu full width" name="service" id="service" required><!--Drop down menu to choose a service.-->
                    <% services.forEach((service)=> { %>
                    <option value = "'<%=service.value %>'"><%= service.text %></option><!--Service options are taken from the JSON file called services.json in the public/data folder.-->
                    <% }) %>
                </select>
                <br />
                <div class="button"> <!--Button to book appointment-->
                <button class= "appointmentBtn"id="button" class="btn btn-primary btn-primary:hover">Book Appointment</button>
                </div>

        </form>
    </div>



</section><!--Including the footer in the page. -->
<%- include('./partials/footer.ejs') %>
</body>
</html>
